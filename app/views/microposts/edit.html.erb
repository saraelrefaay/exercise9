<% provide(:title, 'Edit post') %>
<div class="jumbotron">
	<div class="container">
		<h1>Edit post</h1>
	</div>
	<div class="row">
		<div class="span6 offset3">
			<%= form_for(@micropost) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>
				<%= f.label :title %>
				<%= f.text_field :title %>
				<%= f.label :content %>
				<%= f.text_area :content %>
				<%= f.submit "Save changes", class: "btn btn-large btn-primary" %> 
			<% end %>
			<%= gravatar_for current_user %>
		</div>
	</div>
</div>